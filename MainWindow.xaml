<Window x:Class="TimerWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl x:Name="TimerTabControl" HorizontalAlignment="Left" Height="422" Margin="10,0,0,-2" VerticalAlignment="Top" Width="780">
        <TabItem x:Name="AddTab" Header="+" RenderTransformOrigin="0.5,0.5" Margin="0,0,-2.2,0" HorizontalAlignment="Right" Width="24" MouseDown="AddTab_Click" MouseLeftButtonUp="AddTab_Click" >
            <Grid x:Name="TimerTabs" Background="#FFE5E5E5" Margin="-15,-4,0.4,0.4" RenderTransformOrigin="0.5,0.56" HorizontalAlignment="Left" VerticalAlignment="Top">

            </Grid>
        </TabItem>

    </TabControl>
</Window>
