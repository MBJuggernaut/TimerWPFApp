<UserControl x:Class="TimerWpfApp.Views.DateTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:TimerWpfApp.Views"             
             xmlns:conv="clr-namespace:TimerWpfApp.Converter"
             mc:Ignorable="d" d:DesignWidth="412.8" d:DesignHeight="321.6">
    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="btvc" />
    </UserControl.Resources>
    <Grid HorizontalAlignment="Center" Width="500" Height="Auto" Margin="0,0,0,0">
        <Button Content="{Binding PauseButtonHeader}"
                Command="{Binding Pause}" 
                HorizontalAlignment="Left" Margin="137,196,0,0" VerticalAlignment="Top" Width="75"
                Visibility="{Binding IsVisiblePauseAndReset, Converter={StaticResource btvc}}"/>
        <Button Content="Reset" 
                Command="{Binding Reset}"
                HorizontalAlignment="Left" Margin="257,196,0,0" VerticalAlignment="Top" Width="75"
                Visibility="{Binding IsVisiblePauseAndReset, Converter={StaticResource btvc}}" IsEnabled="{Binding IsPauseButtonPressed}"/>
        <Button Content="Start" 
                Command="{Binding Start}" 
                HorizontalAlignment="Left" Margin="198,196,0,0" VerticalAlignment="Top" Width="75" 
                Visibility="{Binding IsVisibleStart, Converter={StaticResource btvc}}"/>
        <Label Content="{Binding Time}" HorizontalAlignment="Left" Margin="137,87,0,0" VerticalAlignment="Top" Height="33" Width="187"/>
    </Grid>
</UserControl>
